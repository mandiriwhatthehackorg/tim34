<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <ImageView
        android:id="@+id/userImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/profile"/>

    <ImageView
        android:id="@+id/userClearImageView"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/ic_clear_circle_gray"
        android:layout_alignBottom="@id/userImageView"
        android:layout_alignEnd="@id/userImageView"
        android:layout_alignRight="@id/userImageView"/>

    <TextView
        android:id="@+id/userNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userImageView"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>