<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/app_bar_main"
        tools:context=".main.DashboardActivity">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:id="@+id/linearLayout">

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                       android:src="@drawable/icon_transfer"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Transfer"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/purchase" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Purchase"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/payment" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Payment"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/e_money" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="E-Money"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout" android:layout_marginTop="20dp"
            android:id="@+id/linearLayout2">

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/delay_transaction" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Delay \nTransaction"
                      android:gravity="center"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/favorite" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Favoritku"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/link_aja" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:text="Top Up\nLink Aja"
                      android:gravity="center"/>

        </LinearLayout>

        <LinearLayout android:layout_width="0dp" android:layout_height="wrap_content"
                      android:layout_weight="1"
                      android:orientation="vertical"
                      android:gravity="center"
        >
            <ImageView android:src="@drawable/replace_card" android:layout_width="wrap_content" android:layout_height="wrap_content"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Replace Card"/>

        </LinearLayout>

    </LinearLayout>


    <TextView
            android:text="Rekening Giro &amp; Tabungan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView" android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout2" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textColor="#004079" android:textStyle="bold" android:textSize="12sp"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:gravity="center" android:id="@+id/linearLayout3">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/amir_card" android:id="@+id/imageView2"
                android:layout_weight="1"/>

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1.4" android:gravity="center">
            <TextView
                    android:text="Amir Nur Akbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView5" android:textSize="19sp"
                    android:textColor="#003D79" android:textStyle="bold"/>
            <TextView
                    android:text="1111006396058"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView4" android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>


    <TextView
            android:text="New Rekening"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView9" android:textColor="#004079"
            android:textSize="12sp" android:textStyle="bold" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/linearLayout3"
            android:layout_marginTop="20dp"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/textView9" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="20dp" android:gravity="center">
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content" app:srcCompat="@drawable/new_card"
                android:layout_weight="1"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_weight="1.4" android:gravity="center">
            <TextView
                    android:text="New Rekening"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textSize="19sp"
                    android:textColor="#003D79" android:textStyle="bold"/>
            <TextView
                    android:text="Tabungan Rencana and Deposit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:textSize="11sp"/>
        </LinearLayout>
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>